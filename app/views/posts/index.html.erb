

<div class="postSection">
  <h1 style="text-align:center;font-family:Comic Sans MS, cursive, sans-serif;">What people are saying:
  </h1>
  <% @posts.reverse.each do |post| %>
  <div class="postBar">
    <div class="postContent">
      <span>
        <%= post.content %>
      </span>
    </div> 
    <div class="categoryTag">
      <p style="text-align:right;margin-bottom:0em;"> 
        <strong>About what?</strong> 
      </p>
      <p style="text-align:right;margin-top:0em;">
        <span><%= post.category %></span>
      </p>  
    </div>
  </div>
  <% end %>
</div>




<table>
  <thead>
    <tr>
      <th>What people are saying:</th>
      <th>About what?</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.content %></td>
        <td><%= post.category %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


